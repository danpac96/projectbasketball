<!-- Tableau Embed JS -->
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const vizUrl = "https://public.tableau.com/views/Book1_17431527986070/Dashboard1?:language=en-US&:sid=&:redirect=auth&:display_count=n&:origin=viz_share_link";
        const vizContainer = document.getElementById('tableauViz');
        const options = {
            hideTabs: true,
            hideToolbar: false,
            width: '100%',
            height: '700px',
            onFirstInteractive: function () {
                console.log("Tableau dashboard loaded successfully! 🎉");
            }
        };

        new tableau.Viz(vizContainer, vizUrl, options);
    });
</script>

